<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="SecureChat.Windows.CallRequestPopupWindow"
        Title="Incoming voice chat"
        Width="450"
        Height="150">
	<Grid Margin="10" RowDefinitions="*,*" ColumnDefinitions="*,*">
		<TextBlock Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Name="CallerName"/>
		<Button Grid.Column="0" Grid.Row="1" Classes="accept" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Click="AcceptButton_OnClick">Accept</Button>
		<Button Grid.Column="1" Grid.Row="1" Classes="reject" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Click="RejectButton_OnClick">Reject</Button>
	</Grid>
</Window>
