<Window xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		mc:Ignorable="d" d:DesignWidth="650" d:DesignHeight="400"
		x:Class="SecureChat.Windows.DialogWindow"
		Title="Confirm"
		Width="650"
		Height="400"
		CanResize="False">
	<Grid RowDefinitions="*,*" ColumnDefinitions="*,*" Margin="10">
		<TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Name="DisplayText" HorizontalAlignment="Stretch" VerticalAlignment="Center" TextWrapping="Wrap"/>
		<Button Grid.Row="1" Grid.Column="0" HorizontalAlignment="Stretch" Classes="accept" Margin="0, 0, 5, 0" Click="AcceptButton_OnClick">Yes</Button>
		<Button Grid.Row="1" Grid.Column="1" HorizontalAlignment="Stretch" Classes="reject" Margin="5, 0, 0, 0" Click="RejectButton_OnClick">No</Button>
	</Grid>
</Window>