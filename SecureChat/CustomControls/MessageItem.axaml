<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 x:Class="SecureChat.CustomControls.MessageItem"
			 Background="{DynamicResource ApplicationBackgroundColor}"
			 Margin="5">
	<StackPanel Name="PART_Panel">
		<StackPanel Orientation="Horizontal">
			<StackPanel>
				<SelectableTextBlock Name="PART_Name"/>
				<Popup Name="Tooltip" IsLightDismissEnabled="False" Placement="TopEdgeAlignedLeft">
					<TextBlock Name="TooltipText" Background="#202020"/>
				</Popup>
			</StackPanel>
			<SelectableTextBlock Name="PART_DateTime" Margin="5,0,0,0"/>
		</StackPanel>
		<SelectableTextBlock Name="PART_Message" TextWrapping="Wrap"/>
	</StackPanel>
</UserControl>