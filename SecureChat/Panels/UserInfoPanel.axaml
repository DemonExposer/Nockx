<StackPanel xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:customControls="clr-namespace:SecureChat.CustomControls"
		mc:Ignorable="d" d:DesignWidth="650" d:DesignHeight="400"
		x:Class="SecureChat.Panels.UserInfoPanel">
	<TextBlock Margin="0, 20, 0, 0">Display name:</TextBlock>
	<StackPanel Orientation="Horizontal">
		<TextBox MaxLength="255" Name="DisplayNameBox"/>
		<Button Name="SetDisplayNameButton">Set</Button>
		<customControls:Spinner Name="LoadingSpinner"/>
	</StackPanel>
	<TextBlock Margin="0,20,0,0">Key:</TextBlock>
	<TextBox IsReadOnly="True" Name="KeyBox"/>
	<Button Name="ConnectAppButton">Connect mobile app</Button>
</StackPanel>